root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Arquivos Java
[*.java]
indent_style = space
indent_size = 4
max_line_length = 120

# Arquivos XML (ex: configurações do Maven, Spring, etc.)
[*.xml]
indent_style = space
indent_size = 2

# Arquivos de propriedades (application.properties, etc.)
[*.properties]
charset = utf-8
indent_style = space
indent_size = 2